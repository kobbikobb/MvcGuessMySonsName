@{
    ViewBag.Title = "Giskaðu á nafn sonar míns";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/globalize.js"></script>
    <script src="~/Scripts/globalize.culture.is-IS.js"></script>
</head>
<body>

    <header>
        <div class="content-wrapper">
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Heim", "Index", "Home")</li>
                        <li>@Html.ActionLink("Mínar ágiskanir", "MyGuesses", "Guesses")</li>
                        <li>@Html.ActionLink("Allar ágiskanir", "Index", "Guesses")</li>
                        <li>@Html.ActionLink("Vinsældir ágiskana", "Index", "GuessedNames")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div id="body">
        <section class="featured">
            <div class="content-wrapper">
                <hgroup class="title">
                    <h1>@ViewBag.Title</h1>
                    <br />
                    <h2>@ViewBag.Subtitle</h2>
                </hgroup>
            </div>
        </section>

        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Jakob Jónasson</p>
            </div>
        </div>
    </footer>

    @* Ætti að vera neðst í síðunni en ég þarf jquery fyrir facebook login, finna betri lausn *@
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
