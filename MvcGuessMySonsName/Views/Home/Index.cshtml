@{
    ViewBag.Subtitle = "Nafnið verður birt á síðunni sunnudaginn 23. desember 2012";
}

<div class="float-right">
    <img src="~/Images/ibilnumsmall.png" width="300"/>
</div>

<div class="float-left">

    <p style="color:blue">
        Fjöldi réttra ágiskana er: @ViewBag.CorrectCount. Þeir sem eru búnir að giska á rétt nafn eru: @ViewBag.CorrectUsers
    </p>

    <ul>
        <li>Hástafir og lágstafir verða að vera réttir</li>
        <li>Föðurnafni skal sleppa</li>
        <li>Ef strákurinn fær millinafn þá verður að rita það með</li>
    </ul>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {  
        <table style="width:150px">
            @if (!Request.IsAuthenticated)
            {
                var userName = (string)(ViewBag.UserName ?? string.Empty);
                <tr>
                     <td>Nafn þitt: @Html.TextBox("userName", userName) @Html.ValidationMessage("userName")</td>
                 </tr>
            }
            <tr>
                <td>Þín ágiskun: @Html.TextBox("guessedName") @Html.ValidationMessage("guessedName")</td>
            </tr>
            <tr style="text-align:right">
                <td>
                    <input type="submit" value="Giska" style="width:80px" />
                </td>
            </tr>
        </table>
    }
        
    @if (ViewBag.GuessResult != null)
    {
        if(ViewBag.GuessResult)
        {
            <div style="color:green;font-size:24px"> 
                Þú giskaðir á @ViewBag.GuessedName sem er rétt! Til hamingju!
            </div>
        }
        else
        {
            <div style="color:red;font-size:24px"> 
                Þú giskaðir á @ViewBag.GuessedName sem er rangt!
            </div> 
        }
    }

</div>