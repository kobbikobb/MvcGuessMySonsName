@model MvcGuessMySonsName.Models.RegisterExternalLoginModel
@{
    ViewBag.Subtitle = "Tengdu við " + ViewBag.ProviderDisplayName + " reikninginn þinn";
}

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tenging</legend>
        <p>
            Þú hefur náð að tengjast með <strong>@ViewBag.ProviderDisplayName</strong>.
            Veldu notendanafn á síðunni og staðfestu.
        </p>
        <ol>
            <li class="name">
                @("Notendnafn:")
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Staðfesta" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
